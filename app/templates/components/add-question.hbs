{{#if addNewQuestion}}
  <div class="new-question">
    <h2>New Question</h2>
    <form>
      <div class="form-group">
        <label for="content">Question</label>
        {{textarea value=content id="username"}}
      </div>
      <div class="form-group">
        <label for="notes">Additional Notes</label>
        {{input value=notes id="notes"}}
      </div>
      <div class="form-group">
        <label for="author">Username</label>
        {{input value=author id="author"}}
      </div>
      <button {{action 'saveQuestion1'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'questionFormShow'}}>Add Question</button>
{{/if}}
